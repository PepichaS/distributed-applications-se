@model RentACar.ViewModels.VehicleTypes.IndexVehicleTypesVM
<script src="https://kit.fontawesome.com/0a4f4233e3.js" crossorigin="anonymous"></script>

@if (User.IsInRole("Admin"))
{
	<p id="my-p">
		<a asp-action="Create" class="btn bg-warning">Create New</a>
	</p>
}

<table class="table table-hover table-striped">
	<thead class="thead-dark">
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var vehicleType in Model.VehicleTypes)
		{
			<tr>
				<td>@vehicleType.Name</td>
				<td>@vehicleType.Description</td>
				<td>
					<a asp-action="Edit" asp-route-id="@vehicleType.Id"><i class="fa-solid fa-pen-to-square"></i></a> |
					<a asp-action="Details" asp-route-id="@vehicleType.Id"><i class="fa-solid fa-circle-info"></i></a> |
					<a asp-action="Delete" asp-route-id="@vehicleType.Id"><i class="fa-solid fa-trash"></i></a>
				</td>
			</tr>
		}
	</tbody>
</table>
<style>
	body {
		margin: auto;
		background-color: whitesmoke;
	}

	h1 {
		padding: 20px;
	}

	i {
		color: #292929;
	}
</style>
<partial name="_PagingPartial" />
