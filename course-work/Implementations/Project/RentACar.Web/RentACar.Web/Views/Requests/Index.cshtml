@model IndexRequestsVM

<p id="my-p">
    <a asp-action="Create" class="btn bg-warning">Create New</a>
</p>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Start date
            </th>
            <th>
                End date
            </th>
            <th>
                Client
            </th>
            <th>
                Vehicle
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requests)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Vehicle)
                </td>
                <td>
                    <a asp-action="Accept" asp-route-id="@item.Id"><i class="fa-solid fa-check"></i></a> |
                    <a asp-action="Decline" asp-route-id="@item.Id"><i class="fa-solid fa-xmark"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    body {
        margin: auto;
        background-color: whitesmoke;
    }

    h1 {
        padding: 20px;
    }

    i {
        color: #292929;
    }
</style>
<partial name="_PagingPartial" />
